    CGSize size = [_labelAgree.text sizeWithFont:_labelAgree.font constrainedToSize:CGSizeMake(_labelAgree.frame.size.width+100, _labelAgree.frame.size.height) lineBreakMode:NSLineBreakByWordWrapping];
