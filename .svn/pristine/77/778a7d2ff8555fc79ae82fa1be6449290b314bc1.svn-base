{
    return [[DBHelper shareDBHelper].db executeUpdate:@"update tab_bookmark set sort_index=?, update_time=? where pkid=?", @(sort), @((NSInteger)[[NSDate date] timeIntervalSince1970]), @(pkid)];
}

