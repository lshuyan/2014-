{
    ModelBookmark *model = nil;
    FMResultSet *set = [[DBHelper shareDBHelper].db executeQuery:@"select * from tab_bookmark where pkid=?", @(pkid)];
    while ([set next]) {
        model= [ModelBookmark modelWithResultSetDict:[set resultDictionary]];
        break;
    }
    return model;
}

